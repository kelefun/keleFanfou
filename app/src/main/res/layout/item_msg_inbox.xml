<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/base_dimen_8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/msg_inbox_avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/base_dimen_8dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_line"
            android:showDividers="end"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/msg_inbox_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="昵称"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/msg_inbox_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/base_dimen_4dp"
                    android:text="1秒前"
                    android:textColor="@color/colorGrey"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/msg_inbox_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_dimen_8dp"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/base_dimen_4dp"
                android:maxLines="1"
                android:text="你好,韩梅梅"

                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>