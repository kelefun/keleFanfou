<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_dimen_6dp"
    android:layout_marginRight="@dimen/base_dimen_6dp"
    android:layout_marginTop="@dimen/base_dimen_8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_dimen_8dp"
        android:orientation="horizontal">

        <!--头像 -->
        <LinearLayout
            android:layout_width="@dimen/avatar_length"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/avatar_length"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_user" />
        </LinearLayout>
        <!--消息体 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/avatar_length"
                android:layout_marginLeft="@dimen/base_dimen_8dp"
                android:orientation="vertical">
                <!--昵称 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_dimen_4dp"
                    android:text="法医预备役夜傻笑同学同学"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
                <!--发布时间-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_dimen_4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1秒前 可乐饭"
                    android:textColor="@color/colorGrey"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:text="故事，启迪你的人生；美文，陶冶你的情操，有声朗读，刚才看了一说法，说单位的报销制度，其实就是把员工当成信用卡了。我觉得非常精准"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>