<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/my_home_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/base_dimen_12dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/avatar_length_middle"
                android:layout_height="@dimen/avatar_length_middle"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/colorGrey"
                app:civ_border_width="1dp" />
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/base_dimen_24dp"
        android:text="读书郎"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="@dimen/base_dimen_24dp"
        android:layout_height="@dimen/base_dimen_24dp"
        android:src="@drawable/ic_action_edit" />
</LinearLayout>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>